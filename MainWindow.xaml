<Window x:Class="SmartRockets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRockets"
        mc:Ignorable="d"
        Title="Smart Rockets" Height="450" Width="450">
    <Grid>

        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" Margin="328,4,0,0" VerticalAlignment="Top" Width="50" Click="StartBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Margin="383,4,0,0" VerticalAlignment="Top" Width="50" Click="StopBtn_Click"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="378" VerticalAlignment="Top" Width="443" Margin="0,42,0,0"></Canvas>
        <Label x:Name="generationLabel" Content="Generation: " HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="93"/>
        <Label x:Name="maxFitLabel" Content="Max fitness:" HorizontalAlignment="Left" Margin="100,2,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="distanceLabel" Content="Best distance" HorizontalAlignment="Left" Margin="220,1,0,0" VerticalAlignment="Top" Width="108"/>

    </Grid>
</Window>
